generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Aqui podemos escrever nossas tabelas
model Habit{
  id         String @id @default (uuid()) //uuid -> id unico universal
  title      String
  created_at DateTime

  @@map("habits")
}